<div class="container">
    <div class="row head">
      <div class="col-sm">
          <h1>Burgers!!</h1>
      </div>
                    
    </div>

<div class="row">

  <div class="col-sm not_eaten">

    <h2>Burgers to eat!</h2>

    <ul class='list'>
      {{#each burgers}}
        {{#unless devoured}}
          {{> burgers/burger-block}}
        {{/unless}}
      {{/each}}
    </ul>

  </div>

  <div class="col-sm create_burger">
    <h2>Add a Burger</h2>
    <form class="create-form">

      <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
      </div>

      <button type="submit">Add Burger</button>
    </form>
  </div>

  <div class="col-sm eaten">
    <h2>Burgers eaten!</h2>

    <ul class='list'>
      {{#each burgers}}
        {{#if devoured}}
          <li>
            {{burger_name}}
          </li>   
        {{/if}}
      {{/each}}
    </ul>

  </div>






</div>




</div>
