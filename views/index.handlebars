<div class="container">
    <div class="row head">
      <div class="col-sm">
          <img src="/assets/img/burger_42.jpg" alt="burger" class="burg">
      </div>
                    
    </div>

<div class="row">

  <div class="col-sm box not_eaten">

    <h2>Burgers To Eat</h2>

    <ul class='list'>
      {{#each burgers}}
        {{#unless devoured}}
          {{> burgers/burger-block}}
        {{/unless}}
      {{/each}}
    </ul>

  </div>

  <div class="col-sm create_burger">
    
    <form class="create-form">

      <div class="form-group">
        <input type="text" id="ca" name="name" placeholder="Enter Burger Name">
      </div>

      <button type="submit" class="submit_burger">+Add Burger</button>
    </form>
  </div>

  <div class="col-sm box eaten">
    <h2>Burgers Eaten</h2>

    <ul class='list'>
      {{#each burgers}}
        {{#if devoured}}
          <li>
            {{burger_name}}
          </li>   
        {{/if}}
      {{/each}}
    </ul>

  </div>






</div>




</div>
